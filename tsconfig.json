{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "declaration": true,
      "checkJs": true,
      "removeComments": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowJs": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "pretty": true,
      "sourceMap": true,
      "lib": ["es2017", "dom"],
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*__mocks__*", "**/*__tests__*", "**/*__debug__*", "**/*.debug.ts"]

}
